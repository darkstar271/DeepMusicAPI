@{
    ViewData["Title"] = "CRUD using the API"; }
<p></p>
<div id="services">
    <p></p>
    <div class="container">
        <p></p>
        <hr />
        <h1 style="color: red;">Album CRUD</h1>
        <div class="row">
            <div class="col-md-2, col-lg-2">
                <h3 style="color: blue;">Add a Album</h3>
                <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                    <input class="form-control" type="text" id="add-ArtistName" placeholder="Add Artist">
                    <input class="form-control" type="text" id="add-track" placeholder="Add Track">
                    <input class="form-control" type="text" id="add-genre" placeholder="Add Genre">
                    <input type="submit" value="Add">
                </form>
                <h3 style="color: green;">Edit a Album</h3>
                <form class="my-form">
                    <input type="hidden" id="edit-id">
                    <input class="form-control" type="text" id="edit-artistName">
                    <input class="form-control" type="text" id="edit-track">
                    <input class="form-control" type="text" id="edit-genre">
                    <input type="submit" value="Save">
                </form>
            </div>
            <div class="col-md-2, col-lg-2">
                <p id="counter"> </p>
                <table class="table table-striped table-hover">
                    <tr>
                        <th style="color: blue;">Artist</th>
                        <th style="color: blue;">Track</th>
                        <th style="color: blue;">Genre</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <tbody id="allAlbums"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {


    <script src="~/js/AlbumAPIjav.js"></script>

}